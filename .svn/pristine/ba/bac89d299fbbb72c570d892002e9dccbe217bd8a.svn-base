.lista{
    /* max-width: 800px;
    min-width: 265px;*/
    margin:15px auto; 
    background-color: #f5f5f5;
    border: 1px solid #e3e3e3;
    border-radius: 4px;
    padding: 10px 20px;
    text-align: center;
    min-height: 120px;
    min-width: 280px;
}

.titleDesc{
    display: inline-block;
    width: calc(100% - 105px);
    position: relative;
}

.titleDesc .glyphicon{
    position: absolute;
    right: 0px;
    /* top: 0; */
    font-size: large;
    cursor: pointer;
}

@media (max-width: 500px){
    .lista{
        padding:2px;
        min-height: 105px;
    }
    .titleDesc{
        width: calc(100% - 65px);
    }
}

