<div style="position: absolute;" (click)="switch()">
  <span class="outerSwitch">
    <span class="innerSwitchR" [class.switchedR]="value" [style.backgroundColor]="inactiveColor"></span>
    <span class="innerSwitchL" [class.switchedL]="value" [style.backgroundColor]="activeColor"></span>
  </span>
  <span class="innerSwitchM" [class.switchedM]="value" [style.backgroundColor]="toggleColor"></span>
</div>