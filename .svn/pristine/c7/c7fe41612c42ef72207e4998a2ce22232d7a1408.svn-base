.elementBox {
    border: 1px solid black;
    margin: 5px auto;
    padding: 0 5px;
    font-size: 16px;
}

input {
    margin-left:5px;
}

.col-xs-11{
    padding-right: 0;
}

@media (max-width:450px){
    .elementBox {
        font-size:13px;
    }
    .btn-danger, .btn-success {
        padding: 2px 4px;
    }
}

.glyphicon{
    font-size: bigger;
}

.topRight{
    padding-left: 0;
    /*height: unset;*/
}
.iconsTopRight .glyphicon {
    cursor: pointer;
}

.iconsTopRight{
    padding-left: 0px;
    padding-right: 0;
    margin-left: -15px;
}
/*
.elementBoxZoomed{
    height: 120px;
}*/


input[type=datetime-local] {
    max-width: 170px;
}

.form-control {
    max-width: unset !important;
}



.editingInput{
    display:table;
    padding: 0;
}

.dropdown-menu{
    display:initial;
}

li.selected {
    font-weight: bolder;
}

.upArrow::after{
    content: "\E093";
    font-family: 'Glyphicons Halflings';
    float: right;
}

.downArrow::after{
    content: "\E094";
    font-family: 'Glyphicons Halflings';
    float: right;
}

.dropdown-menu li:hover {
    background-color: #ecebeb;
}

.dropdown-menu li {
    margin:0 10px 2px 10px;
    cursor: pointer;
}

.negativeBold{
    font-weight: bold;
}
.negativeBold b{
    font-weight: normal;
    /* font-style: italic; */
}

.textField {
    /*display: inline-block;*/
    width: 100%;
    white-space: nowrap;
    overflow: hidden !important;
    text-overflow: ellipsis;
}

input[type=checkbox]{
    height: 18px;
    padding-top: 5px;
    margin-left:2px;
    top: 6px;
    position: relative;
}

button {
    margin:0 0.5vw 0 0.5vw;
}

p{
    margin:0;
    word-break: break-word;
}

.glyphicon-ok{
    color:green;
}

.glyphicon-remove{
    color:red;
}

.editForm input {
    margin: 10px 20px 0 2px;
}

.editForm div{
    display:inline-block;
}

label {
    font-size: smaller;
    text-align: center !important;
}


.form-group {
    margin-bottom: 0;
}

form {
    padding-top: 5px;
} 



