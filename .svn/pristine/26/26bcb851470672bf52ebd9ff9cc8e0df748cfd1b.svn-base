.box {
    width:100px;
    height: 100px;
    border:1px solid black;
    text-align: center;
    display: inline-block;
    padding: 5px;
}
img {
    width: 90px;
    height: 90px;
    margin:auto;
}

.clickable:hover{
    background-color: lightgrey;
    cursor:pointer;
}

@media screen and (max-width:500px){
    .box {
        width:60px;
        height: 60px;
    }
    img{
        width:50px;
        height: 50px;
    }
}