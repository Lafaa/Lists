.outer {    
    top: 0;
    left: 0;
    background-color: rgba(134, 134, 134, 0.31);
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 2;
}

.changePwdForm{
    border: 1px solid black;
    border-radius: 20px;
    position: absolute;
    /* height: 64vh; */
    width: 80vw;
    top: 8vh;
    left: 10vw;
    min-width: 250px;
    background-color: white;
    text-align: center;
    overflow-x: hidden;
    box-shadow: #525252 0px 0px 20px; 
}

p{
    font-weight: 600;
    color: #da0303;
}

i{
    font-size: x-large;
}

div.form-group, button {    
    margin-right: auto;
    margin-left: auto;
    text-align: center;
    width: 80%;
}

button {    
    margin-bottom: 15px;
}

@media screen and (min-width:560px) {
    .changePwdForm{
        width: 50vw;
        left: 25vw;
    }
}


