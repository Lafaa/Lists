.wellDT {
    display: inline-block;
    text-align: left;
    width: 75%;
    margin-left: -5%;
    margin-right: 5px;
    min-height: 40px;
    padding: 5px;
    margin-bottom: 15px;
    background-color: #f5f5f5;
    border: 1px solid #e3e3e3;
    border-radius: 4px;
    box-shadow: inset 0 1px 1px rgba(0,0,0,.05);
    height: 5vh;
    overflow-y: auto;
}

.wellDT span{
    margin-right: 15px;
    display: inline-flex;
}

.btn-warning{
    top: 0px;
}
.permissionContainer {
    position: relative;
    height: 6vh;
    min-height: 40px;
    margin-bottom: 5px;
}

input[type=text]{
    width:100px;
    height:24px;
    padding: 1px;
    display: inline;
}

.form-group{
    display: inline-block;
    margin-bottom: 0;
}

.glyphicon-minus-sign{
    margin-left:2px;
    top: 3px;
} 

.btn-success{
    top: 15px;
}

.btn-danger{
    top: -20px;
}

@media screen and (max-width:425px){
    .btn-success{
        top: 20px;
    }
    
    .btn-danger{
        top: -10px;
    }
    .btn{
        padding:3px 6px;
    }
    .wellDT{
        margin-left: -10%;
        width: 82%;
    }
}

.btn{
    position: absolute;
}

