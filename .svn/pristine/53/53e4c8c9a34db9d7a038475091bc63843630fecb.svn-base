.box {
    width:100px;
    height: 100px;
    border:1px solid black;
    text-align: center;
    display: inline-block;
    padding: 5px;
}
.Big{
    width:180px;
    height: 180px;
}

img {
    width: 100%;
    height: 100%;
    margin:auto;
}
