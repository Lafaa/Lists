.well {
    min-height: 50px;
    padding: 5px;
    margin: 0 2px 10px 2px;
}

p {
    margin-bottom:2px;
}

.row {
    margin-bottom: 5px;
}

img {
    max-width: 100%;
    max-height: 280px;
}

.col-xs-8 {
    text-align: center;
}

.box {
    min-width: 300px;
    width: 90vw;
    margin: auto;
    border: 1px solid black;
    border-radius: 20px;
    position: absolute;
    /* height: 64vh; */
    width: 80vw;
    top: 8vh;
    left: 10vw;
    min-width: 250px;
    background-color: white;
    text-align: center;
    overflow-x: hidden;
    box-shadow: #525252 0px 0px 20px; 
    padding: 10px;
    z-index: 2
}

.outer {    
    top: 0;
    left: 0;
    background-color: rgba(134, 134, 134, 0.31);
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 1;
}