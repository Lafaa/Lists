.newsBox {
    position: absolute;
    /* padding: 15px; */
    border: 3px solid #516873;
    box-shadow: #7383bf 0 0 15px;
    color: #333;
    background: #fff;
    border-radius: 10px;
    top: 50px;
    width: 50vw;
    z-index: 1;
    right: 0;
    margin-right: 15px;
    max-height: 50vh;
    overflow-y: auto;
}

.news:not(:last-child){
    border-bottom: 1px solid lightgrey;
}

.news {
    padding: 5px;
}

.news p {
    margin:0;
    display: inline;
}

.newsAction{
    display: inline-block;
}

.glyphicon-asterisk{
    top: 2px;
    right: 2px;
    position: absolute;
    color: #5cb85c;
    z-index: 1;
}

.navbar{
    margin-bottom: 5px;
    
}

@media screen and (max-width:500px){
    .nav>li>a{
        padding:10px 5px;
    }
    .firstNav{
        margin-right: 100px;
    }
    .secondNav{
        width: 100px;
    }
    .glyphicon-asterisk{
        top: 0px;
        right: -5px;
    }
}

.container-fluid{
    padding: 0 5px;
}

.glyphicon-ok{
    color:green;
}

.glyphicon-remove{
    color:red;
}

.glyphicon {
    cursor: pointer;
}