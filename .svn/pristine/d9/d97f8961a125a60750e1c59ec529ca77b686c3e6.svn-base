li {
    cursor: pointer;
}

.firstNav {
    margin-right: 190px;
    display: -webkit-box;
    overflow: auto;
    padding-left: 20px;
}

.firstNav li{
    float: initial!important;
}

.secondNav {
    width: 190px; 
    position: absolute; 
    right: 15px;
    top:0;
}

.secondNav li {
    float:left!important;
}

